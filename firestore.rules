rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow an authenticated user to read and write to their own private data.
    // The `userId` in the path must match the authenticated user's UID.
    match /artifacts/{appId}/users/{userId}/projects/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // A public collection that all authenticated users can read from, but not write to.
    // This is useful for sharing templates or read-only data.
    match /artifacts/{appId}/public/{document=**} {
      allow read: if request.auth != null;
    }
  }
}
